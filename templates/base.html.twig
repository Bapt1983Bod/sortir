<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link
                    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
                    rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
                    crossorigin="anonymous">
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('js/addForm.js')}}"></script>
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
    {# entête du site #}
    <header>
        <div class="container-header">
            <h1 class="header-logo">
                <a href="{{ path('app_main') }}" title="Go back to homepage">
                    <img  id="logo" src="{{ asset('img/logo4.png') }}"
                         alt="Sortir.com" style="width: 300px;">
                </a>
            </h1>
            {% include('_navbar.html.twig') %}
        </div>
    </header>
    {# contenu principal de chaque page #}
    <main class="flex-grow-1">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}"> {{ message }} </div>
            {% endfor %}
        {% endfor %}

        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </main>
{#     pied-de-page du site#}
    <footer class="footer mt-auto bg-light">
        <div class="container">
            &copy; Sortir.com {{"now"|date("Y") }}
        </div>
    </footer>
    </body>
</html>