{% extends 'admin/index.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block div %}

    <h2>Gestion des sites</h2>

    <button class="btn btn-secondary"><a href="{{ path('app_admin_site_update',{'id' : 0 }) }}">Ajouter un site</a></button>
    <br><br>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Site</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for site in sites %}
        <tr>
            <td>{{ site.nom }}</td>
            <td>
                    <button class="btn btn-danger"><a href="{{ path('app_admin_site_delete',{'id' : site.id }) }}">Supprimer</a></button>
                    <button class="btn btn-secondary"><a href="{{ path('app_admin_site_update',{'id' : site.id }) }}">Modifier</a></button>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
