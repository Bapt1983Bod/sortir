{% extends 'admin/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/profil_update.css') }}">
{% endblock %}

{% block div %}

    <h2>Gestion des Utilisateurs</h2>

    {{ form_start(form) }}
        {{ form_row( form.nom) }}
        {{ form_row( form.prenom) }}
        {{ form_row( form.telephone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {label: 'Password'}) }}
        {{ form_row( form.site ) }}


            <img src="{{ asset('images/profil/defaultProfil.png') }}" alt="Photo de profil">
        {{ form_row( form.image_file ) }}

        <button type="submit" class="btn btn-danger">Enregistrer</button><br>
    {{ form_end(form) }}

{% endblock %}
