{% extends 'base.html.twig' %}

{% block body %}
<table class="table">
<thead>
    <tr>
        <th>Nom de la sortie</th>
        <th>Date de la sortie</th>
        <th>Duree</th>
        <th>Date de fin</th>
        <th>Inscrits/Places</th>
        <th>Infos</th>
        <th>Site</th>
        <th>Lieu</th>
        <th>Etat</th>
        <th>Participants</th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <td>{{ sortie.nom }}</td>
        <td>{{ sortie.dateHeureDebut|date('d-m-Y H:i:s') }}</td>
        <td>{{ sortie.duree }}</td>
        <td>{{ sortie.dateLimiteInscription|date('d-m-Y') }}</td>
        <td>{{ sortie.nbInscriptionsmax }}</td>
        <td> {{ sortie.infosSortie }}</td>
        <td>{{ sortie.site.nom }}</td>
        <td>{{ sortie.lieu.nom }}</td>
        <td>{{ sortie.etat.libelle }}</td>
        <td>{% for participant in sortie.participants  %}
        <a href="{{ path('app_profil_show', {'id': participant.id}) }}">{{ participant.nom  }}</a><br>
    {% endfor %}</td>
    </tr>
    </tbody>
    {% if(app.user == sortie.organisateur) %}
        <button><a href="{{ path('app_sortie_publish', {'id': sortie.id}) }}">Publier</a></button>
        <button><a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a></button>
    {% endif %}
</table>
{% endblock %}
