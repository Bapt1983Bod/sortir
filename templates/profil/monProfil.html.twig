    <img src="{{ asset('images/profil/'~ app.user.photo ) }}" alt="Photo de profil">

    <ul>
        <li>Prenom : {{ app.user.prenom }}</li>
        <li>Nom : {{ app.user.nom }}</li>
        <li>Téléphone : {{ app.user.telephone }}</li>
        <li>Email : {{ app.user.email }}</li>
        <li>ville de rattachement : {{ app.user.site.nom }}</li>
    </ul>
    
    <button class="btn btn-dark"><a href="{{ path('app_main') }}">Retour</a></button>
    <button class="btn btn-dark"><a href="{{ path('app_profil_update') }}">Modifier</a></button>

