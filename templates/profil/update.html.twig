{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Hello {{ app.user.prenom }} ! ✅</h1>

    {{ form_start(form) }}
        {{ form_row( form.nom) }}
        {{ form_row( form.prenom) }}
        {{ form_row( form.telephone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {label: 'Password'}) }}
        {{ form_row( form.site ) }}
{#        TODO ajouter photo profil si présente sinon afficher image par défaut#}
            {% if app.user.photo %}
                <img src="{{ asset('images/profil/'~ app.user.photo) }}" alt="Photo de profil">
            {% else %}
                <img src="{{ asset('images/profil/defaultProfil.png') }}" alt="Photo de profil">
            {% endif %}
        {{ form_row( form.image_file) }}

        <button type="submit" class="btn btn-danger">Modifier</button>
    {{ form_end(form) }}


    <button class="btn btn-dark"><a href="{{ path('app_profil') }}">Retour</a></button>


</div>
{% endblock %}
