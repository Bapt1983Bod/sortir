{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Profil de {{ participant.prenom }} {{ participant.nom }} ! ✅</h1>

    <img src="{{ asset('images/profil/'~ participant.photo ) }}" alt="Photo de profil">

    <ul>
        <li>Prenom : {{ participant.prenom }}</li>
        <li>Nom : {{ participant.nom }}</li>
        <li>Téléphone : {{ participant.telephone }}</li>
        <li>Email : {{ participant.email }}</li>
        <li>ville de rattachement : {{ participant.site.nom }}</li>
    </ul>
    
    <button class="btn btn-dark"><a href="{{ path('app_main') }}">Retour</a></button>

</div>
{% endblock %}
